<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".profileaccount">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar10"
        android:layout_width="match_parent"
        android:layout_height="41dp"
        android:background="#FFFFFF"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/accountdetails"
        android:layout_marginTop="15dp"
        android:layout_centerHorizontal="true"
        android:textColor="@color/black"
        android:fontFamily="@font/alice"
        android:textSize="20sp"
        android:textStyle="bold"
        />

    <ImageView
        android:id="@+id/imageViewback"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginStart="15dp"
        android:clickable="true"
        android:src="@drawable/baseline_arrow_back_24"
        />
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/imageViewProfile"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@drawable/baseline_account_circle_24"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"
        android:elevation="5dp"
        />
    <ImageView
        android:id="@+id/imageclicke"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginTop="220dp"
        android:layout_marginStart="220dp"
        android:background="@drawable/addphoto"
        android:elevation="5dp"

        />
    <TextView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@drawable/blacadd"
        android:layout_marginTop="220dp"
        android:layout_marginStart="220dp"
        android:elevation="5dp"
        />


    <TextView
        android:id="@+id/textViewuserName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/imageViewProfile"
        android:layout_centerHorizontal="true"
        android:text="Demo Farmer"
        android:layout_marginTop="15dp"
        android:fontFamily="@font/alice"
        android:textStyle="bold"
        android:textSize="24sp"
        android:textColor="@color/black"
        />
    <TextView
        android:id="@+id/textViewfarmer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textViewuserName"
        android:layout_marginStart="163dp"
        android:layout_marginTop="8dp"
        android:text="@string/farmer"
        android:fontFamily="@font/alice"
        android:textSize="20sp"
        android:textColor="@color/black"
        />
    <ImageView

        android:layout_width="80dp"
        android:layout_height="45dp"
        android:src="@drawable/logo"
        android:layout_below="@id/textViewuserName"
        android:layout_marginStart="195dp"
        android:layout_marginTop="-5dp"
        />
    <FrameLayout
        android:layout_width="390dp"
        android:layout_height="240dp"
        android:background="@drawable/frameprofile"
        android:layout_below="@id/textViewfarmer"
        android:layout_marginStart="10dp"
        android:layout_marginTop="30dp"
        android:elevation="8dp"
        >
        <ImageView

            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/username"
            android:layout_marginTop="25dp"
            android:layout_marginStart="20dp"
            />
        <TextView
            android:id="@+id/textViewname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Username"
            android:fontFamily="@font/alice"
            android:textSize="22sp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:paddingTop="30dp"
            android:paddingStart="80dp"/>
        <View
            android:layout_width="370dp"
            android:layout_height="2dp"
            android:layout_marginStart="10dp"
            android:background="#43000000"
            android:layout_marginTop="80dp"
            />

        <TextView
            android:id="@+id/textViewname1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Email"
            android:fontFamily="@font/alice"
            android:textSize="22sp"
            android:textStyle="bold"
            android:paddingTop="110dp"
            android:paddingStart="80dp"
            android:textColor="@color/black"
            />

        <View
            android:layout_width="370dp"
            android:layout_height="2dp"
            android:layout_marginStart="10dp"
            android:background="#43000000"
            android:layout_marginTop="160dp"
            />
        <ImageView

            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/baseline_email_24"
            android:layout_marginTop="105dp"
            android:layout_marginStart="20dp"
            />
        <ImageView

            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/baseline_lock_24"
            android:layout_marginTop="185dp"
            android:layout_marginStart="20dp"
            />
        <TextView
            android:id="@+id/textViewname2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Password"
            android:fontFamily="@font/alice"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:paddingTop="190dp"
            android:paddingStart="80dp"
            />

    </FrameLayout>
    <FrameLayout
        android:layout_width="390dp"
        android:layout_height="80dp"
        android:background="@drawable/frameprofile"
        android:layout_below="@id/textViewfarmer"
        android:layout_marginStart="10dp"
        android:layout_marginTop="300dp"
        android:elevation="8dp"
        >
        <ImageView
            android:id="@+id/signouticon"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/baseline_logout_24"
            android:layout_marginTop="22dp"
            android:layout_marginStart="20dp"
            />
        <Button
            android:id="@+id/textViewname3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/signout"
            android:background="@color/trans"
            android:textAllCaps="false"
            android:fontFamily="@font/alice"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_marginTop="17dp"
            android:paddingStart="80dp"
            android:textColor="@color/red"/>
    </FrameLayout>


    </RelativeLayout>
