<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".addFragment">
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar10"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:fontFamily="@font/alice"
        android:text="@string/farmdetails"
        android:layout_centerHorizontal="true"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold" />
    <ImageView
        android:id="@+id/back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:layout_marginTop="10dp"
        android:layout_marginStart="15dp"
        android:src="@drawable/baseline_arrow_back_24" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginTop="100dp"
            android:fontFamily="@font/alice"
            android:text="@string/farmname"
            android:textColor="@color/black"
            android:textSize="18dp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/farmname"
            android:layout_width="350dp"
            android:layout_height="50dp"
            android:layout_marginStart="15dp"
            android:layout_marginTop="130dp"
            android:background="@drawable/editback"
            android:layout_centerHorizontal="true"
            android:hint="Name "
            android:inputType="text"
            android:paddingStart="15dp"
            android:elevation="8dp"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginTop="190dp"
            android:fontFamily="@font/alice"
            android:text="@string/farmspace"
            android:textColor="@color/black"
            android:textSize="18dp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/space"
            android:layout_width="350dp"
            android:layout_height="50dp"
            android:layout_marginStart="15dp"
            android:layout_marginTop="220dp"
            android:background="@drawable/editback"
            android:hint="Space (haktar) "
            android:layout_centerHorizontal="true"
            android:inputType="text"
            android:elevation="8dp"
            android:paddingStart="15dp"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginTop="280dp"
            android:fontFamily="@font/alice"
            android:text="@string/croptype"
            android:textColor="@color/black"
            android:textSize="18dp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/crop"
            android:layout_width="350dp"
            android:layout_height="50dp"
            android:layout_marginStart="15dp"
            android:layout_marginTop="310dp"
            android:background="@drawable/editback"
            android:hint="Crop "
            android:inputType="text"
            android:layout_centerHorizontal="true"
            android:paddingStart="15dp"
            android:textColor="@color/black"
            android:elevation="8dp"/>


    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="370dp"
        android:fontFamily="@font/alice"
        android:text="@string/soiltype"
        android:textColor="@color/black"
        android:textSize="18dp"
        android:textStyle="bold" />
    <FrameLayout

        android:layout_width="350dp"
        android:layout_height="50dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="400dp"
        android:background="@drawable/editback"
        android:layout_centerHorizontal="true"

        >
    <ImageView
        android:id="@+id/imagesoil"
        android:layout_width="45dp"
        android:layout_height="40dp"
        android:layout_marginStart="300dp"
        android:layout_marginTop="5dp"
        android:elevation="8dp"
        android:clickable="true"
        android:focusable="true"
        android:background="@drawable/baseline_fullscreen_24" />
    <EditText
        android:id="@+id/soil"
        android:layout_width="310dp"
        android:layout_height="50dp"
        android:background="@color/trans"
        android:hint="Soil"
        android:inputType="text"
        android:paddingStart="15dp"
        android:textColor="@color/black"
        android:elevation="8dp"/>
    </FrameLayout>
    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="460dp"
        android:fontFamily="@font/alice"
        android:text="@string/farmlocation"
        android:textColor="@color/black"
        android:textSize="18dp"
        android:textStyle="bold" />
    <FrameLayout

        android:layout_width="350dp"
        android:layout_height="50dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="490dp"
        android:background="@drawable/editback"
        android:layout_centerHorizontal="true"

        >
        <ImageView
            android:id="@+id/imageMap"
            android:layout_width="45dp"
            android:layout_height="30dp"
            android:layout_marginStart="300dp"
            android:layout_marginTop="10dp"
            android:elevation="8dp"
            android:clickable="true"
            android:focusable="true"
            android:background="@drawable/location_green" />

        <EditText
            android:id="@+id/location"
            android:layout_width="310dp"
            android:layout_height="50dp"
            android:background="@color/trans"
            android:hint="Location "
            android:layout_centerHorizontal="true"
            android:inputType="text"
            android:paddingStart="15dp"
            android:textColor="@color/black"
            android:elevation="8dp"/>
    </FrameLayout>
        <Button
            android:id="@+id/starte2"
            android:layout_width="350dp"
            android:layout_height="60dp"
            android:layout_marginStart="15dp"
            android:layout_marginTop="590dp"
            android:background="@drawable/frame_border2"
            android:fontFamily="@font/alice"
            android:text="@string/recommandation"
            android:layout_centerHorizontal="true"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="22sp"
            android:elevation="10dp"
            android:textStyle="bold" />
    <TextView
        android:id="@+id/Recommandationtextview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="680dp"
        android:fontFamily="@font/alice"
        android:text=""
        android:layout_centerHorizontal="true"
        android:textColor="@color/green"
        android:textSize="24sp"
        android:elevation="10dp"
        android:textStyle="bold"
        />

</RelativeLayout>